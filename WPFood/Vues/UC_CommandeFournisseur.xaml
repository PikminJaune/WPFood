<UserControl x:Class="WPFood.Vues.UC_CommandeFournisseur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFood.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="930" d:DesignWidth="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel VerticalAlignment="Center">
            <Button Content="Retour" Click="btn_ClickRetour" Margin="0,0,50,0" Width="100" FontSize="18"/>
            <Label Content="Faire une commande aux fournisseurs" FontSize="30"/>
            <Button Content="Voir l'historique des commandes fournisseurs"
                    Click="btnClick_VoirHistoriqueCommandes"
                    Margin="0,0,50,0" Width="auto" FontSize="18" Cursor="Hand"/>
        </WrapPanel>

        
        
    </Grid>
</UserControl>
