<Window x:Class="WPFood.Vues.UC_Serveur.Modale_Note_Serveur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFood.Vues.UC_Serveur"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Modale_Note_Serveur" Height="300" Width="500">
    <Grid Background="{StaticResource Light_Slate_Gray}">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Note(s)" FontSize="35"></Label>
        </StackPanel>
       
        <StackPanel Grid.Row="1" Margin="15">
            <TextBox
                Name="txbNote"
                Height="115"
                FontSize="20"
                Foreground="White"
                materialDesign:HintAssist.Hint="Veuillez ajouter une note ici">
            </TextBox>
        </StackPanel>


        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <Button Width="250" Click="BtnClick_AjouterNote">Confirmer</Button>
        </StackPanel>
        
    </Grid>
</Window>
